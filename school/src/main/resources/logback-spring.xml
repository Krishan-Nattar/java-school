<?xml version = "1.0" encoding = "UTF-8"?>
<configuration>
<!--This class lets us know it goes to console-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            This is how we want the data on the console goes to-->
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%25.25class] [%thread] [%line] [%-5level] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/tmp/var/logs/lambdajx.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- rollover daily -->
            <fileNamePattern>/tmp/var/mylog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>

            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>


<!--    Additivity = false means we can have multiple things here-->
    <root level="INFO" additivity="false">

        <appender-ref ref = "STDOUT" class="ch.qos.logback.core.ConsoleAppender"/>
        <appender-ref ref="FILE" />
    </root>


</configuration>